{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "PHP Build Target",
  "description": "PHP build target options for Build Facade.",
  "type": "object",
  "properties": {
    "main": {
      "type": "string",
      "description": "The PHP file to execute."
    },
    "serve": {
      "type": "boolean",
      "description": "When true, the dev server will be started.",
      "default": false
    },
    "watch": {
      "type": "boolean",
      "description": "Run build when files change.",
      "default": false
    }
  },
  "additionalProperties": true
}
