{
  "$schema": "http://json-schema.org/schema",
  "id": "WdtkPhpSchematicsApplication",
  "title": "Php Application Options Schema",
  "type": "object",
  "description": "Generates a new PHP application in the workspace.",
  "properties": {
    "name": {
      "description": "The name of the application.",
      "type": "string",
      "format": "html-selector",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the PHP application?"
    },
    "directory": {
      "description": "The directory in which the new application will be created.",
      "type": "string"
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false
    },
    "skipInstall": {
      "description": "Skip installing dependencies",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["name"]
}
