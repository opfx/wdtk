{
  "$schema": "http://json-schema.org/schema",
  "id": "WdtkPhpSchematicsProject",
  "title": "Php Project Options Schema",
  "type": "object",
  "description": "Configures a new PHP project in the workspace.",
  "properties": {
    "name": {
      "description": "The name of the project.",
      "type": "string",
      "format": "html-selector",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the PHP application?"
    },
    "projectRoot": {
      "description": "The root directory of the new app.",
      "type": "string",
      "visible": false
    },
    "projectType": {
      "description": "The root directory of the new app.",
      "type": "string",
      "enum": ["application", "library"],
      "visible": false
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false
    },
    "skipInstall": {
      "description": "Skip installing dependencies",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["name", "projectType"]
}
