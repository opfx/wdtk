{
  "name": "<%= packageNameForComposer %>",
  "description": "Description for <%= name %> library",
  "license": "UNLICENSED",
  "authors": [],
  "scripts": {
    "phpab": "<%= offsetFromRoot %>/node_modules/.bin/phpab",
    "build": "@phpab --phar --lint --var PHAR_EXIT_THUNK=__HALT_COMPILER(); -b src -o <%= offsetFromRoot %>/<%= outputPath %> --alias <%= name %> -t src/main.php -e src/main.php src",
    "test": "paratest"
  },
  "require": {
    "php": ">=7.4.15"
  },
  "require-dev": {
    "brianium/paratest": "<%= paratestVersion %>"
  },
  "autoload": {}
}
