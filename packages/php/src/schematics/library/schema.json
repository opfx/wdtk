{
  "$schema": "http://json-schema.org/schema",
  "id": "WdtkPhpSchematicsLibrary",
  "title": "Php Library Options Schema",
  "type": "object",
  "description": "Generates a new PHP library in the workspace.",
  "properties": {
    "name": {
      "description": "The name of the library.",
      "type": "string",
      "format": "html-selector",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the PHP library?"
    },
    "package": {
      "description": "Package the library in phar.",
      "type": "boolean",
      "format": "html-selector",
      "x-prompt": "Package the PHP library in a phar?"
    },
    "directory": {
      "description": "The directory in which the new library will be created.",
      "type": "string"
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false
    },
    "skipInstall": {
      "description": "Skip installing dependencies",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["name"]
}
