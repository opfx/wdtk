{
  "$schema": "http://json-schema.org/schema",
  "$id": "WdtkJestSchematicsInit",
  "title": "Jest Init Options Schema",
  "type": "object",
  "description": "Adds Jest support to the workspace.",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "babelJest": {
      "type": "boolean",
      "alias": "babel-jest",
      "description": "Use babel-jest instead of ts-jest",
      "default": false
    },
    "setupFile": {
      "type": "string",
      "enum": ["none", "angular", "web-components"],
      "description": "The setup file to be generated",
      "default": "none"
    },
    "skipSerializers": {
      "type": "boolean",
      "description": "Skips the serializers required to snapshot angular templates",
      "default": false
    },
    "supportTsx": {
      "type": "boolean",
      "description": "Setup tsx support",
      "default": false
    },
    "testEnvironment": {
      "type": "string",
      "enum": ["jsdom", "node"],
      "description": "The test environment for jest",
      "default": "jsdom"
    },
    "skipInstall": {
      "description": "Skip installing after adding @wdtk/jest",
      "type": "boolean",
      "default": false
    }
  },
  "required": []
}
