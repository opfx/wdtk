{
  "$schema": "http://json-schema.org/schema",
  "id": "WdtkNestSchematicsApplication",
  "title": "Nest Init Options Schema",
  "type": "object",
  "description": "Adds Nest (NestJS) nature to the workspace.",
  "properties": {
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false
    },
    "skipInstall": {
      "description": "Skip installing dependencies",
      "type": "boolean",
      "default": false
    },
    "unitTestRunner": {
      "description": "Adds the specified unit test runner",
      "type": "string",
      "enum": ["jest", "none"],
      "default": "jest"
    }
  },
  "required": []
}
