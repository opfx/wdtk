{
  "$schema": "http://json-schema.org/schema",
  "$id": "wx-cli://commands/generate/schema.json",
  "description": "Generates and/or modifies files based on a schematic.",
  "$longDescription": "",

  "$aliases": ["g"],
  "$scope": "in",
  "type": "object",
  "$type": "schematic",
  "$impl": "./index#GenerateCommand",

  "allOf": [
    {
      "type": "object",
      "properties": {
        "schematic": {
          "type": "string",
          "description": "The schematic or collection:schematic to generate.",
          "$default": {
            "$source": "argv",
            "index": 0
          }
        },
        "verbose": {
          "type": "boolean",
          "default": false,
          "aliases": ["v"],
          "description": "When true, adds more details to output logging."
        }
      },
      "required": []
    },
    { "$ref": "./../definitions.json#/definitions/base" },
    { "$ref": "./../definitions.json#/definitions/schematic" },
    { "$ref": "./../definitions.json#/definitions/interactive" }
  ]
}
