{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Stencil Build Target",
  "description": "Stencil build target options for Build Facade.",
  "type": "object",
  "properties": {
    "config": {
      "type": "string",
      "description": "The Stencil config file."
    },
    "serve": {
      "type": "boolean",
      "description": "When true, the dev server will be started.",
      "default": false
    },
    "watch": {
      "type": "boolean",
      "description": "Run build when files change.",
      "default": false
    }
  },
  "additionalProperties": true
}
