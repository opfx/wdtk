{
  "$schema": "http://json-schema.org/schema",
  "$id": "WdtkStencilSchematicsLibrary",
  "title": "Stencil Library Options Schema",
  "type": "object",
  "description": "Generates a new Stencil library in the workspace.",
  "properties": {
    "name": {
      "description": "The name of the library.",
      "type": "string",
      "format": "html-selector",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the Stencil library?"
    },
    "directory": {
      "description": "The directory of the new library.",
      "type": "string"
    },
    "prefix": {
      "alias": "p",
      "description": "A prefix to apply to generated tags.",
      "type": "string",
      "format": "html-selector",
      "default": "app",
      "$default": {
        "$source": "defaultPrefix"
      }
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false
    },
    "skipInstall": {
      "description": "Skip installing dependencies",
      "type": "boolean",
      "default": false
    },
    "style": {
      "description": "The file extension of preprocessor to use for style files.",
      "type": "string",
      "default": "sass",
      "enum": ["css", "sass"],
      "x-prompt": {
        "message": "Which stylesheet format would like to use?",
        "type": "list",
        "items": [
          { "value": "css", "label": "CSS" },
          { "value": "sass", "label": "Sass   [ https://sass-lang.com/documentation/syntax#the-indented-syntax ]" }
        ]
      }
    },
    "e2eTestRunner": {
      "description": "The test runner to use for end to end (e2e) tests.",
      "type": "string",
      "enum": ["puppeteer", "none"],
      "default": "puppeteer"
    },
    "unitTestRunner": {
      "description": "The test runner to use for unit tests.",
      "type": "string",
      "enum": ["jest", "none"],
      "default": "jest"
    }
  },
  "required": ["name"]
}
