{
  "$schema": "http://json-schema.org/schema",
  "id": "WdtkNodeSchematicsApplication",
  "title": "Node Application Options Schema",
  "type": "object",
  "description": "Generates a new Node application in the workspace.",
  "properties": {
    "name": {
      "description": "The name of the application.",
      "type": "string",
      "format": "html-selector",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the Node application?"
    },
    "directory": {
      "description": "The directory of the new application.",
      "type": "string"
    },
    "linter": {
      "description": "The tool to use for running lint checks.",
      "type": "string",
      "enum": ["eslint", "tslint"],
      "default": "eslint"
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    },
    "skipInstall": {
      "description": "Skip installing after adding @wdtk/node",
      "type": "boolean",
      "default": false
    },
    "skipPackageJson": {
      "type": "boolean",
      "default": false,
      "description": "Do not add dependencies to package.json."
    },
    "unitTestRunner": {
      "description": "Adds the specified unit test runner",
      "type": "string",
      "enum": ["jest", "none"],
      "default": "jest"
    },
    "babelJest": {
      "type": "boolean",
      "description": "Use babel instead ts-jest",
      "default": false
    }
  },
  "required": ["name"]
}
